nav#nav
  span#blog_name
    a#site-name(href=url_for('/')) #[=config.title]
    
  #menus
  !=partial('includes/header/menu_item', {}, {cache: true})
  #nav-right
    if (theme.algolia_search.enable || theme.local_search.enable)
      #search-button
        a.site-page.social-icon.search
          i.fas.fa-search.fa-fw
      #kaiwang-button
        a.link(href="https://travellings.cn/" title="开往-随机跳转另一个加入开往的网页" target="_blank")
          i.fas.fa-train.fa-fw
      #random-post-button
        a.link(href="#" onclick="toRandomPost()" title="随机前往一篇文章")
          i.fas.fa-shuffle
      #toggle-menu
        a.site-page
          i.fas.fa-bars.fa-fw
